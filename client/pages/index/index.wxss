/**index.wxss**/

@import "../../common/lib/weui.wxss";
@import "../../wxSearchView.wxss";

button{
  margin-bottom: 30rpx;
}
button:last-child{
  margin-bottom: 0;
}
.page-section-title{
  padding: 0;
}

.swiper-item{
  display: block;
  height: 400rpx;
}
.page-section-title{
  margin-top: 60rpx;
  position: relative;
}
.info{
  position: absolute;
  right: 0;
  color: #353535;
  font-size: 30rpx;
}
.page-foot{
  margin-top: 50rpx;
}

.userinfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userinfo-avatar {
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 15px;
}

.usermotto {
  
  margin: 300px 240rpx;
}

.swiper image {
  height: 340rpx;
  width: 100%;
}

swiper{
  height: 340rpx;
}

.addressShell{
  background-color: #008EE3;
  padding: 10rpx 0 10rpx 4rpx;
  display: flex;
  flex-direction: row;
}

.searchShell{
  background-color: #008EE3;
  padding: 0rpx 0 0rpx 0rpx;
}

.address{
  width: 70%;
  font-size: 18px;
  color: white;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fourIcon{
  height: 80px;
}
.weui-grids1 {
  border-top: 0rpx solid #D9D9D9;
  border-left: 1rpx solid #D9D9D9;
  overflow: hidden;
}
.weui-grid1 {
  position: relative;
  float: left;
  padding: 10px 10px;
  width: 25%;
  box-sizing: border-box;
  border-right: 0rpx solid #D9D9D9;
  border-bottom: 2rpx solid #D9D9D9;
  height: 80px;
}
.weui-grid_active1 {
  background-color: #ECECEC;
}
.weui-grid__icon1 {
  display: block;
  width: 35px;
  height: 35px;
  margin: 0 auto;
}
.weui-grid__label1 {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000000;
  font-size: 14px;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.articles{
  background-color: #fff;
}
.article__item{
  display: flex;
  padding: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid #eee;
  position: relative;
  padding-bottom: 20rpx;
  padding-left: 20px;
}
.article__thumb{
  width:4.2rem;
  height: 3rem;
  margin-right: 0.6rem;
}
.article__image{
  width:3.5rem;
  height: 3rem;
}
.article__info{
  flex: 1;
  width: 100%;
  overflow: hidden;
}
.article__title{
  font-weight: 400;
  font-size: 26rpx;
  text-overflow: ellipsis;
  white-space:nowrap;
  display: block;
  width: 100%;
  margin-bottom: 10rpx;
}
/* 支持多行 */
.article__title__large{
  
}

.article__desc{
  color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  width: 100%;
}

.article__item__cover{
  display: block;
}
.article__cover{
  padding-bottom: 10rpx;
  overflow: hidden;
}

.article__time{
  margin-right: 10rpx;
}
.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.missionRecommend{
  padding: 2rpx 0 2rpx 0;
  text-align: center;
  border-top: 15rpx solid #D9D9D9;
  border-bottom: 2rpx solid #D9D9D9;
}