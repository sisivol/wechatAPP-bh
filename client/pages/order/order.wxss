}

.article__desc{
  color: #999;
  font-size: 24rpx;
  line-height: 1.2;
  width: 100%;
}

.article__time{
  margin-right: 10rpx;
}
.person-line {
  width: 100%;
  height: 5rpx;
  background: lightgray;
}

.article__count{
  float: right;
  display: flex;
  align-items: center;
  color:#333;
  font-size: 20rpx;
  font-weight: 500;
  margin-right: 20rpx;
}

.article__icon{
  width: 29rpx;
  height: 29rpx;
  margin-left: 15rpx;
  margin-right: 6rpx;
}

.article__image{
  width:3rem;
  height: 3rem;
}

